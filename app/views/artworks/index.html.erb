
<h1>NonPrintingCharacter</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">

      <ul class="list-unstyled">
      <% @answered_ids = [] %>
      <% @tweets[:timeline].each do |tweet| %>
        <li> 
            <% if @tweets[:status].select { |twt| twt.id == tweet.in_reply_to_status_id }.size != 0 %>

          <div class="container">
            <div class="row">

              <img src="<%= @tweets[:status].select { |twt| twt.id == tweet.in_reply_to_status_id }.first.attrs[:user][:profile_image_url] %>">

              <p><strong><%= @tweets[:status].select { |twt| twt.id == tweet.in_reply_to_status_id }.first.attrs[:user][:name] %></strong></p>

              <p><%= @tweets[:status].select { |twt| twt.id == tweet.in_reply_to_status_id }.first.text %></p>

            </div>
          </div>

          <% end %>

          <% if tweet.attrs[:entities][:media] %>
           <div> <img src="<%= tweet.attrs[:entities][:media][0][:media_url] %>"></div> 
          <% end %>
          <br>
          <div><%= tweet.text %></div>
          <%# tweet.in_reply_to_status_id %>

        </li>

      <% end %>
      </ul>
    </div>
  </div>
</div>

